<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidmanifester.simpleemotionsgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GameMode"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SelectWordActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".SelectModeActivity">

        </activity>
        <activity android:name=".AboutGameMode" />
        <activity android:name=".AboutLearningMode" />
        <activity android:name=".LearningMode" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>